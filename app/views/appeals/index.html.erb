<%- model_class = Appeal -%>
<div class="row">
  <div class="page-header">
    <h1>Send Requests</h1>
  </div>
</div>
  <% if @appeals %>
  <div class="row">
    <div class="col-lg-5">
      <table class="table table-striped">
        <tbody>
          <% @appeals.each do |appeal| %>
            <tr>
              <td><%= appeal.receiver.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% else %>
    <div class="row">
      <div class="col-lg-6">
        <div class="well">
          <p>You haven't send any request</p>
        </div>
      </div>
    </div>
  <% end %>