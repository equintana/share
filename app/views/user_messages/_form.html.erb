<%= form_for @user_message, :html => { :class => 'form-horizontal bs-example', :multipart => true } do |f| %>
  
<% if @user_message.errors.any? %>
  <div id="error_explanation">
    <h2>Oops something goes wrong:  <%= pluralize(@user_message.errors.count, "error") %></h2>
    <ul>
    <% @user_message.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="control-group">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :class => "text_area form-control", :size => "50x5" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remote_image_url, " Image from URL ", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :remote_image_url, :class => "form-control"%>
    </div>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_messages_path, :class => 'btn' %>
  </div>
<% end %>
