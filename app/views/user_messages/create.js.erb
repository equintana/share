
<% if @user_message.errors.any? -%>
  /*Hide the flash notice div*/
 
  /*Update the html of the div user_message_errors with the new one*/
    <% @user_message.errors.full_messages.each do |msg| %>
     $("#user_message_errors").html("<li><%= msg %></li>");
    <% end %>

  /*Show the div user_message_errors*/
  $("#user_message_errors").show(300);
<% else -%>
  /*Hide the div user_message_errors*/
  $("#user_message_errors").hide(300);

  /*Clear the entire form*/
  $(":input:not(input[type=submit])").val("");

  /*Replace the html of the div user_message_lists with the updated new one*/
  $("#user_messages_list").html("<%= j( render("user_messages/user_messages") ) %>");
<% end -%>