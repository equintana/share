<%- model_class = UserMessage -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<ul class="list-group">
  <% @user_messages.each do |user_message| %>
    <li class="list-group-item">
      <span class="badge"><%= time_ago_in_words(user_message.created_at) %></span>
      <p> 
      <%= link_to user_message.message, user_message_path(user_message) %> </p>
      <p>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_message_path(user_message), :class => 'btn btn-xs btn-primary' %>
        <%= link_to t('.destroy ', :default => t("helpers.links.destroy")),
                user_message_path(user_message),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-xs btn-danger' %>

      
      </p>
      <% if user_message.image? %>
        <span class="label label-info">img</span>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to t('.new', :default => t("helpers.links.new")),
          new_user_message_path,
          :class => 'btn btn-sm btn-primary ' %>



