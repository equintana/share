<%- model_class = UserMessage -%>

  <div class="well well-sm ">
    <p> 
      <span class="pull-left" style="padding: 6px;">
        <%= image_tag avatar_url(@user_message.user) %>
      </span>
      <span class="badge pull-right">
        <%= time_ago_in_words(@user_message.created_at) %>
       </span>
      <div>
        <%= link_to  user_path(@user_message.user), :method => :get do %> 
          <%= @user_message.user.name %> 
        <% end %>
        <br/>
        <%= @user_message.user.email %>
      </div> 
    </p>
    
    <p>
      <%= auto_link(@user_message.message, :html => { :target => '_blank' }) %>
    </p>
    <%= image_tag @user_message.image_url(:medium).to_s if @user_message.image_url %> 
  </div>

  <p>
    <%= link_to t('.back', :default => t("helpers.links.back")),
        user_messages_path, :class => 'btn btn-primary btn-sm' %>

    <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_user_message_path(@user_message), :class => 'btn btn-sm btn-primary' %>
    <%= link_to t('.destroy ', :default => t("helpers.links.destroy")),
          user_message_path(@user_message),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-sm btn-danger' %>
  </p>