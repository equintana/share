<%- model_class = UserMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
 </div>

<ul class="list-group">
    <li class="list-group-item">
      <span class="badge"><%= time_ago_in_words(@user_message.created_at) %></span>
      <% if @user_message.image? %>
        <p><%= image_tag @user_message.image_url.to_s %></p>
      <% end %>
      <p> <%= @user_message.message %> </p>
      <p>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_message_path(@user_message), :class => 'btn btn-sm btn-primary' %>
          <%= link_to t('.destroy ', :default => t("helpers.links.destroy")),
                user_message_path(@user_message),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-sm btn-danger' %>
      
      </p>
    </li>
</ul>

 <%= link_to t('.back', :default => t("helpers.links.back")),
            user_messages_path, :class => 'btn btn-primary btn-sm' %>

