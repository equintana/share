<div class="page-header">
    <h1>Pending Requests</h1>
</div>
<% if !@appeals.empty? %>
	<div class="row">
		<div class="bs-example table-responsive">
			<table class="table table-striped table-bordered table-hover">
				<tbody>
				<% @appeals.each do | appeal | %>
					<tr>
					<td><%= appeal.user.email %></td>
					<td>
						<%= form_for appeal, :url => pending_appeal_path(appeal) do |f| %>
                		<%= f.hidden_field :is_accepted, value: true %>
                		<%= f.submit "Accept", class: "btn btn-primary" %>
              			<% end %>
					</td>
					<td>
						<%= form_for appeal, :url => pending_appeal_path(appeal) do |f| %>
                		<%= f.hidden_field :is_accepted, value: false %>
                		<%= f.submit "Deny", class: "btn btn-danger" %>
              			<% end %>
					</td>
					</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>
<% else %>
<div class="row">
  <div class="col-lg-6">
    <div class="well">
      <p>You don't have any friend request</p>
    </div>
  </div>
</div>
<% end %>