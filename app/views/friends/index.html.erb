<div class="page-header">
    <h1>My Friends</h1>
</div>
<% if @friends %>
	<div class="row">
		<div class="col-lg-6">
			<div class="bs-example table-responsive">
				<table class="table table-striped table-bordered table-hover">
					<tbody>
						<% @friends.each do | friend | %>
						<tr>
							<td><%= friend.name %></td>
							<td><%= friend.email %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="col-lg-6">
      <div class="well">
  			<p>You don't have any friend. You can add friends <%= link_to "here", users_path %></p>
  		</div>
    </div>
	</div>
<% end %>